{% extends "base.html.twig" %}

{# Override do title #}
{% block title %}Listagem dos Posts!{% endblock %}

{% block body %}
    {%  for id, post in posts %}

        <div class="alert alert-primary" role="alert">
            <a href="{{ path('blog_show', {'id':id}) }}">{{ id }}</a>
        </div>

        <h3>{{ post.title }}</h3>
        <p>{{ post.text }}</p>
    {% endfor %}
{% endblock %}

