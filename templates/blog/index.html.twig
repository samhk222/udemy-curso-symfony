{% extends "base.html.twig" %}

{# Override do title #}
{% block title %}Listagem dos Posts!{% endblock %}

{% block body %}
    {%  for id, post in posts %}
        <p><a href="{{ path("blog_show", {'id':id}) }}">ID: {{ id }}</a></p>
        <h3>{{ post.title }}</h3>
        <p>{{ post.text }}</p>
    {% endfor %}
{% endblock %}

